{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "VCL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.vcl",
					"match": "(;.*?$)"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.vcl",
					"match": "\\b(?i)(if|else|else if|while|begin_module|end_module|enter)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.vcl",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.vcl",
							"match": "\\."
						}
					]
				}
			]
		},
		"functions": {
			"name": "support.function.vcl",
			"match": "\\s*([A-Za-z_$][\\w$]*)\\s*(?=(\\())",
			"patterns": [
				{
					"include": "#strings"
				}
				
			]
		}
		


	},
	"scopeName": "source.vcl"
}